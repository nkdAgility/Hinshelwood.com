{{- range $index, $customer := site.Data.clients -}}
  {{- $path := printf "/clients/%s" ($customer.ItemId | default (printf "client-%d" $index)) -}}
  
  {{- $.AddPage (dict
    "kind" "page"
    "path" $path
    "title" $customer.title
    "date" $customer.date
    "sitemap" (dict "priority" 0.4)
    "weight" $customer.weight
    "params" (dict
      "ItemId" $customer.ItemId
      "image" $customer.image
      "industries" $customer.industries
      "customer" true
    )
  ) -}}
{{- end -}}
